generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CartItem {
  id       String  @id @default(uuid())
  userId   String
  itemId   String
  name     String
  price    Decimal @db.Decimal(10, 2)
  quantity Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, itemId])
  @@index([userId])
}
